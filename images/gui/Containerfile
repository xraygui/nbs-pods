ARG BASE_IMAGE=nbs
FROM ${BASE_IMAGE}

RUN dnf -y install qt5-qtbase-devel qt5-qtwayland

RUN pip3 install PyQt5

RUN pip3 install qtconsole

RUN pip3 install git+https://github.com/xraygui/livetable@v0.1.0
RUN pip3 install git+https://github.com/xraygui/nbs-gui@v0.1.0

CMD ["nbs-gui", "--profile", "default"]

LABEL version="0.0.1" 